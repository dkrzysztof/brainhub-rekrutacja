{
	"moduleFileExtensions": ["js", "json", "ts"],
	"moduleNameMapper": {
		"^src/(.*)$": "<rootDir>/src/$1",
		"^test/(.*)$": "<rootDir>/test/$1"
	},
	"rootDir": "../",
	"testEnvironment": "node",
	"testRegex": ".spec.ts$",
	"setupFiles": ["dotenv/config"],
	"transform": {
		"^.+\\.(t|j)s$": "ts-jest"
	}
}
